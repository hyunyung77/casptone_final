<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.casptonefinal.chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/orange_700</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/bg_filter_chip_state_list</item>
        <item name="android:textColor">@color/text_filter_chip_state_list</item>
        <item name="textStartPadding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIconTint">@color/icon_filter_chip_state_list_reset</item>
        <item name="chipIconSize">12dp</item>
        <item name="iconStartPadding">6dp</item>
        <item name="chipEndPadding">2dp</item>
    </style>

    <style name="Widget.casptonefinal.chip2" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/Navy_700</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/bg_filter_chip_state_list_navy</item>
        <item name="android:textColor">@color/text_filter_chip_state_list</item>
        <item name="textStartPadding">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIconTint">@color/icon_filter_chip_state_list_reset_navy</item>
        <item name="chipIconSize">12dp</item>
        <item name="iconStartPadding">6dp</item>
        <item name="chipEndPadding">2dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TabTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/backgroundcolor</item>
        <item name="android:textColorPrimary">@color/orange_700</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="colorAccent">@color/gray</item>


    </style>
</resources>