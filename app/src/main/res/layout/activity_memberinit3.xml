<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".memberinit.memberinit3"
    android:background="@color/litte_grey">

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="235dp"
        android:layout_marginRight="235dp"
        android:gravity="left"
        android:text="자\n자기소개\n시작"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_message"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="자기소개"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userintrouduce"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="253dp"
        android:background="@drawable/round_edit_text_size"
        android:hint="자기소개 예시\nex)교내대회 ooo우승\n       해커톤 000입상\n        00전공 A+, 100시간 "
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="15dp" />

    <Button
        android:id="@+id/self_introduce_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userintrouduce"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_button_style"
        android:padding="10dp"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>