<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/make_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="Switch\n계정만들기"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/make_account_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/round_edit_text_size"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/sign_up_input_user_univeristy_number"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit_text_size"
            android:hint="학번"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="15dp" />

        <EditText
            android:id="@+id/sign_up_input_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit_text_size"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="15dp" />

        <EditText
            android:id="@+id/sign_up_input_pwd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit_text_size"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="15dp" />

        <EditText
            android:id="@+id/sign_up_input_pwd2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit_text_size"
            android:hint="비밀번호확인"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/service_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입시" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용약관"
            android:textColor="#08B1FE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에 동의한것으로 간주합니다." />
    </LinearLayout>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button_style"
        android:text="회원가입" />

    <LinearLayout

        android:id="@+id/AlreadyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/sign_up_have_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="이미 계정이 있습니다."
            android:textColor="#08B1FE"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sign_up_go_back"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_backarrow" />
</RelativeLayout>