<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch\n계정만들기"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:lineSpacingExtra="8dp"
        android:id="@+id/make_account_text"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/input"
        android:layout_below="@+id/make_account_text"
        android:layout_marginRight="30dp"
        android:background="@drawable/round_edit_text_size"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp">


        <EditText
            android:id="@+id/sign_up_input_userName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit_text_size"
            android:hint="닉네임"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="15dp" />
        <EditText
            android:id="@+id/sign_up_input_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit_text_size"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="15dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_edit_text_size"
            android:padding="15dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:id="@+id/sign_up_input_pwd"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input"
        android:id="@+id/service_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입시"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용약관"
            android:textColor="#08B1FE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에 동의한것으로 간주합니다."/>
    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/signUpButton"
        android:text="회원가입"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button_style"
        android:layout_below="@id/service_message"
        android:layout_marginTop="30dp"
        />
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpButton"
        android:id="@+id/AlreadyAccount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미 계정이 있습니다."
            android:textColor="#08B1FE"
            android:textSize="15dp"/>
    </LinearLayout>
</RelativeLayout>