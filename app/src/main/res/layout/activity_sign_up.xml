<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/Navy_300">



    <TextView
        android:id="@+id/make_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="235dp"
        android:layout_marginRight="235dp"
        android:gravity="left"
        android:text="안양대생\n모두\n여기모여"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView

        android:layout_marginLeft="30dp"
        android:layout_marginTop="60sp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/make_account_text"
        android:layout_centerVertical="true"
        android:layout_marginStart="57dp"
        android:text="이메일"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/sign_up_input_email"
        android:layout_width="200sp"
        android:layout_height="44sp"
        android:background="@drawable/rounded_corner"
        android:layout_marginLeft="40sp"
        android:layout_below="@+id/make_account_text"
        android:inputType="text"
        android:layout_marginTop="90sp"
        android:paddingLeft="20sp"
        android:textSize="15sp"
        android:hint="이메일" />
    <Button

        android:id="@+id/email_vertification_buttion"
        android:layout_width="wrap_content"
        android:layout_height="44sp"
        android:layout_below="@+id/make_account_text"
        android:layout_toRightOf="@+id/sign_up_input_email"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="40sp"
        android:background="@drawable/login_button_style"
        android:text="이메일 인증" />

    <TextView

        android:layout_marginLeft="30dp"
        android:layout_marginTop="30sp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_input_email"
        android:layout_centerVertical="true"
        android:layout_marginStart="57dp"
        android:text="비밀번호"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/sign_up_input_pwd"
        android:layout_width="327sp"
        android:layout_height="44sp"
        android:background="@drawable/rounded_corner"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"
        android:layout_below="@+id/sign_up_input_email"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:layout_marginTop="60sp"
        android:paddingLeft="20sp"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/sign_up_input_pwd2"
        android:layout_width="327sp"
        android:layout_height="44sp"
        android:layout_below="@+id/sign_up_input_pwd"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40sp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_corner"
        android:hint="비밀번호 확인"
        android:paddingLeft="20sp"
        android:textSize="15sp" />

    <View
        android:id="@+id/line"
        android:layout_width="300sp"
        android:layout_height="2dp"
        android:layout_below="@+id/AlreadyAccount"
        android:layout_marginTop="15sp"
        android:layout_centerHorizontal="true"

        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/service_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입시" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 이용약관 "
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에 동의한것으로 간주합니다." />
    </LinearLayout>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_input_pwd2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button_style"
        android:text="회원가입"
        android:enabled="false" />


    <LinearLayout

        android:id="@+id/AlreadyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/sign_up_have_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="이미 계정이 있습니다."
            android:textColor="@color/Navy_700"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sign_up_go_back"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_backarrow" />
</RelativeLayout>