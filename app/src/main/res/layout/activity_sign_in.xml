<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@drawable/backgrundpage"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인 실패! 이메일 또는 비밀번호를 다시 입력하세요"
        android:textSize="16dp"
        android:padding="15dp"
        android:id="@+id/alert_message"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:layout_marginTop="-55dp"
        />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="235dp"
        android:gravity="left"
        android:text="안양대생\n모두\n여기모여"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/sign_in_input_email"
        android:layout_width="327sp"
        android:layout_height="44sp"
        android:background="@drawable/rounded_corner"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"
        android:layout_below="@+id/welcome_message"
        android:inputType="text"
        android:layout_marginTop="60sp"
        android:paddingLeft="20sp"
        android:textSize="15sp"
        android:hint="이메일" />

    <EditText
        android:layout_width="327sp"
        android:layout_height="44sp"
        android:background="@drawable/rounded_corner"
        android:layout_marginRight="40sp"
        android:layout_marginLeft="40sp"
        android:layout_below="@+id/sign_in_input_email"
        android:inputType="text"
        android:layout_marginTop="15sp"
        android:paddingLeft="20sp"
        android:textSize="15sp"
        android:hint="비밀번호"
        android:id="@+id/sign_in_input_pwd"

        />

    <Button
        android:id="@+id/login_button"
        android:layout_width="327sp"
        android:layout_height="44sp"
        android:layout_below="@id/sign_in_input_pwd"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_button_style"
        android:textStyle="bold"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <View
        android:layout_width="300sp"
        android:layout_height="2dp"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="15sp"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="5sp"
        android:layout_centerHorizontal="true"
        android:background="@color/Navy_300"
        android:text="or"
        />
    


    <TextView
        android:id="@+id/go_to_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:text="sing up"
        android:textSize="12sp"
        android:textColor="@color/white"
        />

    <TextView
    android:id="@+id/find_account"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/go_to_sign_up"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10sp"
    android:text="Forgot your ID?\nForgot your Password?"
        android:gravity="center"
    android:textSize="12sp"
    android:textColor="@color/white"
    />





</RelativeLayout>
