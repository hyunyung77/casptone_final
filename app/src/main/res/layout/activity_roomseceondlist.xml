<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_100"
    tools:context=".Detail.HomeDetail.GroupchatDetailActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/room_backgrounImage"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/lightgray"/>


            <TextView
                android:id="@+id/room_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userName"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/room_title_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roomtitle"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_user_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="-29dp"
                tools:layout_editor_absoluteY="-246dp">

            </LinearLayout>




        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="160dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_user"
            />


    </ScrollView>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true">




        <ImageView
            android:id="@+id/sendMessage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_hear_empty__2_" />

        <Button
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_button_style"
            android:ems="10"
            android:text="방 참가하기"
            android:textSize="28sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="5dp"
            />

    </LinearLayout>

</RelativeLayout>